body
    background-color #FAFAFA
    background-size 100%
    font-size 16px
    letter-spacing 0.05em
    font-family 'Open Sans'
    line-height 1.8em


h1
    font-size 1.6em
h2
    font-size 1.4em
h3
    font-size 1.2em


.txt-centro
    text-align center
.txt-left
    text-align left
.txt-right
    text-align right

.no-movil
    display none

.movil
    margin 0 auto
    padding 0.5em

.oculto
    display none
.mostrar
    display inline

@media screen and (min-width:720px)
    .tablet
        margin 0 auto
        width 80%

    .ver-tablet
        display inline

@media screen and (min-width:1024px)
    .desktop
        margin 0 auto
        max-width 64em

    .ver-desktop
        display inline

    .no-desktop
        display none